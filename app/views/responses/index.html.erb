<p id="notice"><%= notice %></p>

<h1>Responses</h1>

<table>
  <thead>
    <tr>
      <th>Answer text</th>
      <th>Survey</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @responses.each do |response| %>
      <tr>
        <td><%= response.answer_text %></td>
        <td><%= response.survey.name %></td>
        <td><%= link_to 'Show', survey_response_path(response.survey, response) %></td>
        <td><%= link_to 'Edit', edit_survey_response_path(response.survey, response) %></td>
        <td><%= link_to 'Destroy', [response.survey, response], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Response', new_survey_response_path %>
